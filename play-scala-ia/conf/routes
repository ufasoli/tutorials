# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#Products
GET         /                             controllers.Application.index
GET         /products                     controllers.Products.list
POST        /products                     controllers.Products.save
GET         /products/new                 controllers.Products.newProduct
GET         /products/:ean                controllers.Products.show(ean:Long)
GET         /products/:ean/edit           controllers.Products.edit(ean:Long)
PUT         /products/:ean                controllers.Products.update(ean:Long)
#regexp and similar routes

# more specific route needs to be first (regex) otherwise compilation error cannot bind long to String
GET         /products/$ean<\d{13}>        controllers.Products.details(ean:Long)
GET         /products/:alias              controllers.Products.alias(alias:String)
DELETE      /products/:ean                controllers.Products.delete(ean:Long)


# diverse tutorial examples
GET         /examples                     controllers.Tutorialexamples.index


#Path variables with forward slashes ( / )
#GET         /products/*file             controllers.Media.get(file:String)

GET         /picklists/:warehouse         controllers.PickLists.preview(warehouse:String)

#Barcode handling
GET         /barcode/:ean                 controllers.Barcodes.barcode(ean:Long)
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
